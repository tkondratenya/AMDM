@{
    ViewBag.Title = "EmGm";
}
@model IEnumerable<AMDM.WEB.Models.PerformerViewModel>

<div class="panel panel-default">
    <div class="panel-heading" align="center">
        Популярные исполнители
        <table class="table">
            <tr class="page-header">
                <td><p>Исполнитель</p></td>
                <td><p>Подборов</p></td>
            </tr>
            @foreach (AMDM.WEB.Models.PerformerViewModel p in Model)
            {
                <tr>
                    <td><p><img src="@p.ImageLink"><a href="@p.PerformerPageLink">@p.Name</a></p></td>
                    <td><p>@p.Songs.Count</p></td>
                </tr>
            }
        </table>
    </div>
</div>
    